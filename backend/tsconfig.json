{

  "compilerOptions": {

    "moduleResolution":"bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
  },
  "include":["**/*.ts"],
  "ts-node":{
    "esm":true,
    "experimentalSpecifierResolution": "node"
  }
}
